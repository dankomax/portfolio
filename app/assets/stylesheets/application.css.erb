* {
  margin: 0;
  padding: 0;
}

body {
  background-color: #272b28;
  color: #fff;
  font-family: 'Roboto', serif;
  width: 100%;
}

main {
  margin: 70px 0;
  z-index: 0;
}


/*    HEADER    */

header {
  background-color: #272b28;
  position: fixed;
  top: 0;
  width: 100%;
  height: 80px;
  z-index: 3;
}

header h2 {
  margin-top: 15px;
  float: right;
}

header a {
  margin-top: 10px;
  font-size: 1.5rem;
  text-decoration: none;
  color: #fff;
}


/*     Welcome     */

.home {
  background-image: url('https://images.unsplash.com/photo-1569913206567-988348c4d945?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80'),
                    url(<%= asset_path('rinck-content.jpg') %>);
  background-repeat: no-repeat;
  background-size: cover;
  height: 90vh;
}

.home .col {
  margin-top: 50px;
  margin-left: 320px;
}

.home .message {
	background-color: #272b28;
  opacity: 0.9;
	width: 390px;
  padding: 30px;
  margin: 10px 0;
}

.home .btn {
  background-color: #272b28;
  color: white;
  opacity: 0.9;
  display: block;
  border-radius: 0;
  width: 390px;
  padding: 6px 20px;
  font-size: 1.5rem;
  text-align: center;
  text-decoration: none;
  transition: background 1s; 
}

a {
  color: #61b7ff;
}


.home .btn:hover, a:hover {
  color: #61b7ff;
  opacity: 1;
}


/*    FOOTER    */
footer {
  position: fixed;
  z-index: 1;
  bottom: 0;
  background-color: #272b28;
  width: 100%;
  height: 70px;
  padding-top: 10px;
}

footer .social_media {
  float: right;
}

footer .nav-item {
  height: 70px;
  width: 70px;
}

footer p {
  padding-top: 20px;
}


/*    PORTFOLIO    */

.portfolio h2 {
  margin-top: 35px;
}

.portfolio p {
  margin-top: 10px;
}

.portfolio img {
  width: 100%;
}


/*   BLOG   */

.blog h2 {
  color: #61b7ff;
  padding-top: 100px;
}

.blog h3 {
  color: #61b7ff;
  padding-top: 50px;
}

.blog h4 {
  color: #61b7ff;
  padding-top: 40px;
  font-style: italic;
}

.blog .white {
  color: white;
  font-size: 20px;
  font-style: italic;
}

.blog p {
  font-size: 20px;
}

.right {
  float: right;
}

.blog .btn {
  width: 150px;
  color: #61b7ff;
  border: 1px solid white;
  display: block;
  border-radius: 0;
  padding: 6px 20px;
  text-align: center;
  text-decoration: none;
  transition: background 1s; 
}

.blog .btn:hover {
  border: 2px solid white;
}

.blog .textfield {
  background-color: #F2F4F4;
  width: 250px;
}


.blog textarea:focus {
  background-color: #F2F4F4;
  width: 100%;
  height: 300px;
}


/*    ABOUT    */

.about {
  background-color: #272b28;
  position: relative;
  z-index: 2;
  margin-top: 30px;
}

.about img {
  width: 100%;
}

.about p, .about h2 {
  margin-top: 10px;
}


/*    CONTACT    */

.contact {
  background-image: url(<%= asset_path("rinck-content.jpg") %>);
  background-repeat: no-repeat;
  background-size: cover; 
  background-color: initial;
  min-height: 800px;
}

.contact {
  min-width: 400px;
  align-content: center;
}

.contact .col {
  background-color: #272b28;
  opacity: 0.9;
  max-width: 600px;
  margin: 100px auto;
  
}

.contact h2 { 
  margin: 20px auto;
  text-align: center;
}

.contact p {
  margin-top: 10px;
  font-size: 24px;
  text-align: center; 
}



/**********    
  MEDIA QUERIES    
**********/

@media screen and (max-width: 900px) {
  /*    HEADER    */

  header {
    height: 100px;
  }

  header .nav-item {
    padding: 0 5px;
  }

  header .nav-link {
    padding: 0;
  }

  .home {
    background-image: url('https://images.unsplash.com/photo-1569556666948-cf63b49f52fe?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80');
  }

  .home .col {
    margin-left: 2em;
  }
}


@media (orientation: portrait){

  .home {
    background-image: url('https://images.unsplash.com/photo-1569556666948-cf63b49f52fe?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80');
  }


  .about {
    max-width: 90%;
  }

  .about .row {
    flex-direction: column;
    align-items: center;
  }

  .about .col-md-6 {
    max-width: 100%;
  }



  .portfolio {
    max-width: 90%;
  }

  .portfolio .row {
    flex-direction: column;
    align-items: center;
  }

  .portfolio .col-md-6{
    max-width: 100%;
  }

  .portfolio .col-lg-4{
    max-width: 100%;
  }

  footer {
    z-index: 3;
  }
}